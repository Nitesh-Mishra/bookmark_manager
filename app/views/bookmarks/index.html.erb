<h1 align="center">List of Bookmarks</h1>
<hr>


<br>
<div class="col-md-1"></div>
<div class="col-md-3 ">
	<h4 align="center">List of Tasks </h4>
	<hr>
	<div class="well">
		<%= link_to "Create a New Bookmark", new_bookmark_path, class: "new_bookmark" %>
		<br><br>
		<%= link_to "Search By Tag", :controller => "tags" , :action => "index" %> 
		<br><br>
		<%= link_to "List of Tags", :controller => "tags" , :action => "index" %> 
	</div>
</div>

<div class="panel-primary col-md-7">
		<%= form_tag bookmarks_path, :method => 'get' do %>
		<div class="col-md-10">
		    <%= text_field_tag :search, params[:search], :class=> "form-control",:placeholder => "Search Bookmark by Title" %>
		</div>
		<div class="form-group">
		    <center><%= submit_tag "Search", :name => nil,:class => "btn btn-primary " %></center>
		</div> 
		<% end %>
		<hr>
    <div class="panel-body well"><br/>
    	
		<ul id="bookmarks">
		  <% @bookmarks.each do |bookmark| %>
		    <li>
		      	<h4><%= link_to bookmark.title, bookmark_path(bookmark), class: 'bookmark_title', id: "bookmark_#{bookmark.id}" %></h4>
				<p><b>Link :</b> <%= link_to bookmark.link %></p>
				<p>
				  <b>Tags : </b>
				  <% bookmark.tags.each do |tag| %>
				    <%= link_to tag.name, tag_path(tag) %>
				  <% end %>
				</p>
		    </li>
		  <% end %>
		</ul>

		<%= will_paginate @bookmarks %> 
		
	</div>
</div>




